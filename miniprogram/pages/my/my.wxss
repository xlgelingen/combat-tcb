.page-container{
  position: relative;
  display: flex;
  flex-direction: column;
}

/*用户模块*/
.user-section{
  padding: 50rpx 40rpx;
}

.login-container{
  display: flex;
}

.user-section .user-nickName{
  flex: 1;
  font-size: 24px;
  line-height: 150rpx;
  color: #333;
}

.user-section .user-avatarUrl-box{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  padding: 0;
  background-color: #f5f5f5;
}
.user-section .user-avatarUrl{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.avatar-img {
  display: block;
  width: 56px;
  height: 56px;
}

.avater-descrb{
  margin-top: 20rpx;
  color: #666;
  font-weight: 400;
  width: fit-content;
}

/*导航模块*/
.navigator-section{
  flex: 1;
  border-top: 20rpx solid #f5f5f5;
}

.navigator-item{
  display: flex;
  height: 118rpx;
  line-height: 118rpx;
  border-bottom: 2rpx solid #e4e4e4;
  padding: 0 40rpx;
}

.navigator-item .navigator-item-bd{
  flex: 1;
  font-size: 16px;
  color: #666;
}

.navigator-item-ft{
  color: #999;
  font-size: 14px;
}

.navigator-item-ft_in-access{
  position:relative;

}

.navigator-item-ft_in-access:after {
  content:" ";
  display:inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style:solid;
  transform: rotate(45deg);
  position: absolute;
  top: 50%;
  margin-top: -4px;
}
/*登录按钮*/
.login-btn{
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 520rpx;
  height: 120rpx;
  color: #fff;
  font-size: 18px;
  border-radius: 0;
  background-color: #000;
}

.login-btn_hover{
  opacity: .8;
}