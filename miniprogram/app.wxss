/**app.wxss**/
page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100vh;
  font-size: 16px;
  line-height: 1.6;
  font-family: Arial;
  box-sizing: border-box;
  background: #f6f6f6;
}
.page-container {
  min-height: 100%;
  background-color: #fff;
}
button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}